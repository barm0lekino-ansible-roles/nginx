server{

  listen {{ nginx.listen_http_port }};

  server_name default.{{ domain_name }};

  location /nginx_status {
	stub_status on;
	access_log off;
    allow {{ hostvars[inventory_hostname]['ansible_default_ipv4']['address'] }};
	deny all;
  }

  location /.well-known/ {
    root {{ nginx.root_directory }};
  }

  # security
	include snippets/security.conf;
  # additional config
	include snippets/general.conf;
}
